        "declaration": true,
        "declarationMap": true,
        "noEmit": false,
        "isolatedModules": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/__tests__/**"
    ]
}